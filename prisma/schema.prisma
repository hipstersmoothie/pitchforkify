// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  relationMode      = "prisma"
}

model User {
  id             String        @id @default(cuid())
  lastSavedAlbum String?
  savedAlbums    SavedAlbum[]
  playedAlbums   PlayedAlbum[]
}

model SavedAlbum {
  uri    String
  userId String
  User   User   @relation(fields: [userId], references: [id])

  @@unique([uri, userId])
  @@index([userId])
}

model PlayedAlbum {
  uri    String
  userId String
  User   User?  @relation(fields: [userId], references: [id])

  @@unique([uri, userId])
  @@index([userId])
}

model Review {
  id Int @id @default(autoincrement())

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  albumTitle   String   @db.VarChar(300)
  reviewHtml   String   @db.MediumText
  cover        String   @db.VarChar(400)
  spotifyAlbum String?
  author       String
  score        Float
  publishDate  DateTime
  isBestNew    Boolean
  labels       Label[]
  artists      Artist[]
  genres       Genre[]

  @@unique([albumTitle, publishDate])
}

model Label {
  id   Int    @id @default(autoincrement())
  name String @unique

  reviews Review[]
}

model Artist {
  id   Int    @id @default(autoincrement())
  name String @unique

  reviews Review[]
}

model Genre {
  id   Int    @id @default(autoincrement())
  name String @unique

  reviews Review[]
}
